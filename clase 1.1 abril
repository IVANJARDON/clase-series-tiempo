ica <- read.csv ("C:\\Users\\SALA-C7\\Desktop\\ica.csv", header =T)
icats <- ts(ica [,5], start = 2000, frequency = 12)
plot(icats , main="valor acciones ICA",
     ylab="valor cierre")
tele <- read.csv ("/home/sgr/Desktop/televisa.csv", header = T)
telets <- ts(ica [,5], start = 2000, frequency = 12)
plot(telets, , main="valor acciones televisa",
     ylab="valor cierre")
bimbo <- read.csv ("/home/sgr/Desktop/bimbo.csv", header = T)
bimbots <- ts(bimbo [,5], start = 2000, frequency = 12)
plot(bimbots,   main="valor acciones bimbo",
     ylab="valor cierre")

## ahora bien una vez que tenemos y conocemos la gr[afica
#para determinar con mayor precision
### las tendencias y estacionalidad se utiliza la funcion season 
#plot que esta en la libreria fpp]

install.packages ("fpp")
require (fpp)
help (fpp)
seasonplot(icats,s= 12, year.labels=TRUE,
           main="valor acciones ICA",
           ylab="valor cierre",col=1:20,year.labels.left=TRUE,pch=1)

##### con monthplot pódemos hacer un analisis de la st dependiendo del periodo 
## de los datos por ejemplo si tenemos trimestral se pueden analizar los 4 trimestres.... en grafica

monthplot(icats,ylab="valor cierre",xlab="Month",
          main="valor acciones ICA")
help (monthplot)

